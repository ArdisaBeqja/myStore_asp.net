@page
@model MyStore.Pages.Clients.CreateModel
@{
}
<br>
<h2>New Client</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
	</div>
}
<form method="POST">
	<div class="row mb-3">
	<label class="col-sm-3 col-form-label">Name</label>
	<div class="col-sm-6">
		<input type="text" class="form-controll" name="name" value="@Model.clientInfo.name">
	</div>
	</div>

	<div class="row mb-3">
	<label class="col-sm-3 col-form-label">Email</label>
	<div class="col-sm-6">
		<input type="text" class="form-controll" name="email" value="@Model.clientInfo.email">
	</div>
	</div>

	<div class="row mb-3">
	<label class="col-sm-3 col-form-label">PhoneNr</label>
	<div class="col-sm-6">
		<input type="text" class="form-controll" name="phoneNr" value="@Model.clientInfo.phone">
	</div>
	</div>

	<div class="row mb-3">
	<label class="col-sm-3 col-form-label">Address</label>
	<div class="col-sm-6">
		<input type="text" class="form-controll" name="address" value="@Model.clientInfo.address">
	</div>
	</div>


	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class='alert alert-success alert-disissible fade show' role='alert'>
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close" data-bs-dsmiss='alert' aria-label="Close"></button>
				</div>
			</div>
		</div>
	}


	<div class="row mb-3">
     <div class="offset-sm-3 col-sm-3 d-gird">
		 <button type ="submit" class="btn btn-primary">Submit</button>

	 </div>
	 <div class="col-sm-3 d-grid">
		 <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
	 </div>
	</div>

</form>
